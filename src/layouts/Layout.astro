---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  url?: string;
}

const { title, description, image, url } = Astro.props;

const defaultDescription =
  'Proiect NOU in TIMIȘOARA, vânzare direct de la dezvoltator, apartamente cu finisaje moderne si de calitate, preturi competitive, zonă liniștită si verde preponderent rezidențiala.';
const defaultImage = new URL('/og.jpg', Astro.url).href;
const canonicalURL = url || Astro.url.href;
const ogImage = image ? new URL(image, Astro.url).href : defaultImage;
---

<!doctype html>
<html lang="ro" class="!scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ClientRouter />
    <title>{title}</title>
    <meta name="description" content={description || defaultDescription} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description || defaultDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:locale" content="ro_RO" />
    <meta property="og:site_name" content="Nosto - Proiect Rezidential" />

    <!-- WhatsApp specific -->
    <meta name="theme-color" content="#c56d44" />
    <meta
      property="og:image:alt"
      content="Proiect Rezidential Nosto - Apartamente moderne în Timișoara"
    />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description || defaultDescription} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Additional SEO meta tags -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="language" content="Romanian" />
    <meta name="geo.region" content="RO-TM" />
    <meta name="geo.placename" content="Timișoara" />
    <meta name="geo.position" content="45.75216;21.2759468" />
    <meta name="ICBM" content="45.75216, 21.2759468" />

    <!-- Author and contact -->
    <meta name="author" content="Nosto Development" />
    <meta name="contact" content="info@nosto.ro" />

    <!-- Keywords for Romanian real estate -->
    <meta
      name="keywords"
      content="apartamente timisoara, proiect rezidential, apartamente noi, vanzare apartamente, dezvoltator imobiliar, finisaje moderne, preturi competitive, zona verde, timisoara rezidential"
    />

    <!-- Revisit and refresh -->
    <meta name="revisit-after" content="7 days" />

    <!-- Copyright -->
    <meta name="copyright" content="Nosto Development" />
    <!-- Business schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "RealEstateAgent",
        "name": "Nosto - Proiect Rezidential",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Timișoara",
          "addressRegion": "TM",
          "addressCountry": "RO"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": "45.75216",
          "longitude": "21.2759468"
        }
      }
    </script>
    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=AW-17335794830"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'AW-17335794830');
    </script>

    <!-- Meta Pixel Code -->
    <script is:inline>
      !function(f,b,e,v,n,t,s)
      {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
      n.callMethod.apply(n,arguments):n.queue.push(arguments)};
      if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
      n.queue=[];t=b.createElement(e);t.async=!0;
      t.src=v;s=b.getElementsByTagName(e)[0];
      s.parentNode.insertBefore(t,s)}(window, document,'script',
      'https://connect.facebook.net/en_US/fbevents.js');
      fbq('init', '714838384770271');
      fbq('track', 'PageView');
    </script>
    <noscript><img height="1" width="1" style="display:none"
    src="https://www.facebook.com/tr?id=714838384770271&ev=PageView&noscript=1"
    /></noscript>
    <!-- End Meta Pixel Code -->
  </head>
  <body class="font-sans flex flex-col min-h-screen">
    <svg
      aria-hidden="true"
      width="0"
      height="0"
      style="position:absolute;width:0;height:0;overflow:hidden"
    >
      <defs>
        <pattern
          id="apartment-sold-stripes"
          patternUnits="userSpaceOnUse"
          width="8"
          height="8"
          patternTransform="rotate(45)"
        >
          <rect width="8" height="8" style="fill: var(--color-bg-primary);"></rect>
          <path
            d="M0 0 L0 8"
            style="stroke: var(--color-tab-secondary); stroke-width: 2; opacity: 0.4;"></path>
          <path
            d="M4 0 L4 8"
            style="stroke: var(--color-tab-secondary); stroke-width: 2; opacity: 0.4;"></path>
        </pattern>
      </defs>
    </svg>
    <Navbar transition:persist />
    <main class="pt-16 flex-grow mb-16 pb-16 md:pb-0">
      <slot />
    </main>
    <Footer transition:persist />
    <SpeedInsights />
  </body>
</html>
