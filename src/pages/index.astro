---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import heroImage from '../assets/hero-img.png';
import heroLogo from '../assets/hero-logo.svg';
import Location from '../components/Location.astro';
import SectionTitle from '../components/SectionTitle.astro';
import ApartmentShowcase from '../components/ApartmentShowcase.svelte';
---

<Layout title="Proiect Rezidential - Nostro">
  <!-- Hero Section -->
  <section class="relative h-screen w-full overflow-hidden">
    <Image
      src={heroImage}
      alt="Apartment Building"
      class="w-full h-full object-cover object-center"
    />
    <Image
      src={heroLogo}
      alt="Hero Logo"
      class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2"
    />
  </section>

  <!-- About Section -->
  <section id="despre" class="py-12 bg-main">
    <SectionTitle title="Despre Proiect" id="despre-proiect-title" />
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <Image
            src="https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg"
            alt="Building Interior"
            class="rounded-sm shadow-lg"
            inferSize
          />
        </div>
        <div>
          <p class="text-lg text-gray-600 mb-6">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor
            incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
            exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
          </p>
          <ul class="space-y-4">
            <li class="flex items-center text-gray-700">
              <span class="w-6 h-6 mr-2 text-primary">✓</span>
              Locație premium în centrul orașului
            </li>
            <li class="flex items-center text-gray-700">
              <span class="w-6 h-6 mr-2 text-primary">✓</span>
              Finisaje de înaltă calitate
            </li>
            <li class="flex items-center text-gray-700">
              <span class="w-6 h-6 mr-2 text-primary">✓</span>
              Parcare subterană
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Apartments Section -->
  <section class="py-12 bg-main">
    <SectionTitle title="Tipuri de Apartamente" id="apartamente-title" />
    <div class="max-w-[95vw] lg:max-w-[1600px] mx-auto px-2 sm:px-6 lg:px-8">
      <ApartmentShowcase
        client:load
        apartments={[
          {
            type: 'STUDIO',
            size: '45mp',
            description:
              'Apartament modern tip studio, perfect pentru tineri profesioniști sau investiție. Spațiu eficient compartimentat cu zonă de zi multifuncțională, bucătărie și baie.',
            planImage: 'https://images.pexels.com/photos/5524165/pexels-photo-5524165.jpeg',
            features: ['Suprafață utilă: 45mp', 'Living + bucătărie', 'Baie', 'Balcon'],
          },
          {
            type: '1.5 CAMERE',
            size: '65mp',
            description:
              'Apartament spațios cu două camere, ideal pentru cupluri sau familii mici. Dispune de living cu bucătărie, dormitor separat și baie.',
            planImage: 'https://images.pexels.com/photos/5524147/pexels-photo-5524147.jpeg',
            features: ['Suprafață utilă: 65mp', 'Living + bucătărie', 'Dormitor', 'Baie', 'Balcon'],
          },
          {
            type: '2 CAMERE',
            size: '85mp',
            description:
              'Apartament generos cu trei camere, perfect pentru familii. Include living cu bucătărie, două dormitoare și două băi.',
            planImage: 'https://images.pexels.com/photos/5524155/pexels-photo-5524155.jpeg',
            features: [
              'Suprafață utilă: 85mp',
              'Living + bucătărie',
              '2 Dormitoare',
              '2 Băi',
              'Balcon',
            ],
          },
          {
            type: '2.5 CAMERE',
            size: '85mp',
            description:
              'Apartament generos cu trei camere, perfect pentru familii. Include living cu bucătărie, două dormitoare și două băi.',
            planImage: 'https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg',
            features: [
              'Suprafață utilă: 85mp',
              'Living + bucătărie',
              '2 Dormitoare',
              '2 Băi',
              'Balcon',
            ],
          },
          {
            type: '3 CAMERE',
            size: '85mp',
            description:
              'Apartament generos cu trei camere, perfect pentru familii. Include living cu bucătărie, două dormitoare și două băi.',
            planImage: 'https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg',
            features: [
              'Suprafață utilă: 85mp',
              'Living + bucătărie',
              '2 Dormitoare',
              '2 Băi',
              'Balcon',
            ],
          },
          {
            type: '4 CAMERE',
            size: '85mp',
            description:
              'Apartament generos cu trei camere, perfect pentru familii. Include living cu bucătărie, două dormitoare și două băi.',
            planImage: 'https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg',
            features: [
              'Suprafață utilă: 85mp',
              'Living + bucătărie',
              '2 Dormitoare',
              '2 Băi',
              'Balcon',
            ],
          },
        ]}
      />
    </div>
  </section>

  <!-- Packages Section -->
  <section class="py-12 bg-main">
    <SectionTitle title="Pachete Finisaje" id="finisaje-title" />
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          [
            {
              name: 'Standard',
              price: 'Inclus în preț',
              features: ['Parchet laminat', 'Gresie și faianță', 'Uși interior'],
            },
            {
              name: 'Premium',
              price: '+5000€',
              features: ['Parchet triplu stratificat', 'Gresie porțelanată', 'Uși premium'],
            },
            {
              name: 'Luxury',
              price: '+10000€',
              features: ['Parchet masiv', 'Marmură', 'Uși custom'],
            },
          ].map((packageItem) => (
            <div class="border rounded-sm p-8 text-center">
              <h3 class="text-2xl font-bold mb-4">{packageItem.name}</h3>
              <p class="text-primary font-bold mb-6">{packageItem.price}</p>
              <ul class="space-y-3">
                {packageItem.features.map((feature) => (
                  <li class="text-gray-600">{feature}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Location Map Section -->
  <div class="px-8 md:px-16">
    <Location />
  </div>
</Layout>

<style>
  .leaflet-map {
    width: 80%;
    aspect-ratio: 5/3;
    z-index: 0;
  }
  @media (max-width: 640px) {
    .leaflet-map {
      aspect-ratio: 3/5;
      width: 90%;
    }
  }

  /* Map button styles */
  .map-btn {
    background-color: #f3f4f6;
    color: #4b5563;
    margin-right: 0.5rem;
    border: 2px solid transparent;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .map-btn:hover {
    background-color: #e5e7eb;
    transform: translateY(-2px);
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .map-btn:hover::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background-color: currentColor;
  }

  .map-btn.selected {
    background-color: #ffffff;
    color: #111827;
    border-color: currentColor;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
</style>
