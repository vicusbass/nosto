---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Proiect Rezidential - Nostro">
  <!-- Hero Section -->
  <section class="relative h-screen">
    <div class="absolute inset-0">
      <img
        src="https://images.pexels.com/photos/323780/pexels-photo-323780.jpeg"
        alt="Apartment Building"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <div class="relative h-full flex items-center justify-center">
      <div class="text-center text-white">
        <h1 class="text-4xl md:text-6xl font-bold mb-4">Numele Proiectului</h1>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="despre" class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
        Despre Proiect
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <img
            src="https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg"
            alt="Building Interior"
            class="rounded-sm shadow-lg"
          />
        </div>
        <div>
          <p class="text-lg text-gray-600 mb-6">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do
            eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim
            ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut
            aliquip ex ea commodo consequat.
          </p>
          <ul class="space-y-4">
            <li class="flex items-center text-gray-700">
              <span class="w-6 h-6 mr-2 text-primary">✓</span>
              Locație premium în centrul orașului
            </li>
            <li class="flex items-center text-gray-700">
              <span class="w-6 h-6 mr-2 text-primary">✓</span>
              Finisaje de înaltă calitate
            </li>
            <li class="flex items-center text-gray-700">
              <span class="w-6 h-6 mr-2 text-primary">✓</span>
              Parcare subterană
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Apartments Section -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-[95vw] lg:max-w-[1600px] mx-auto px-2 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-8">
        Tipuri de Apartamente
      </h2>
      <div class="pb-[15vh]">
        {
          [
            {
              type: "Studio",
              size: "45mp",
              description:
                "Apartament modern tip studio, perfect pentru tineri profesioniști sau investiție. Spațiu eficient compartimentat cu zonă de zi multifuncțională, bucătărie și baie.",
              planImage:
                "https://images.pexels.com/photos/5524165/pexels-photo-5524165.jpeg",
              features: [
                "Suprafață utilă: 45mp",
                "Living + bucătărie",
                "Baie",
                "Balcon",
              ],
            },
            {
              type: "2 Camere",
              size: "65mp",
              description:
                "Apartament spațios cu două camere, ideal pentru cupluri sau familii mici. Dispune de living cu bucătărie, dormitor separat și baie.",
              planImage:
                "https://images.pexels.com/photos/5524147/pexels-photo-5524147.jpeg",
              features: [
                "Suprafață utilă: 65mp",
                "Living + bucătărie",
                "Dormitor",
                "Baie",
                "Balcon",
              ],
            },
            {
              type: "3 Camere",
              size: "85mp",
              description:
                "Apartament generos cu trei camere, perfect pentru familii. Include living cu bucătărie, două dormitoare și două băi.",
              planImage:
                "https://images.pexels.com/photos/5524155/pexels-photo-5524155.jpeg",
              features: [
                "Suprafață utilă: 85mp",
                "Living + bucătărie",
                "2 Dormitoare",
                "2 Băi",
                "Balcon",
              ],
            },
          ].map((apartment, index) => (
            <div
              class={`apartment-section sticky top-20 min-h-[calc(100vh-8rem)] flex items-center ${index > 0 ? "mt-[20vh]" : ""}`}
            >
              <div class="grid grid-cols-1 md:grid-cols-2 bg-white rounded-sm shadow-xs w-full h-[640px] md:min-h-[420px] lg:min-h-[420px] items-stretch overflow-hidden">
                <div class="space-y-6 flex flex-col justify-between p-8 h-full">
                  <h3 class="text-2xl font-bold text-primary">
                    {apartment.type}
                  </h3>
                  <p class="text-gray-600">{apartment.description}</p>
                  <ul class="space-y-3">
                    {apartment.features.map((feature) => (
                      <li class="flex items-center text-gray-700">
                        <span class="w-6 h-6 mr-2 text-primary">✓</span>
                        {feature}
                      </li>
                    ))}
                  </ul>
                </div>
                <div class="flex items-center h-full">
                  <img
                    src={apartment.planImage}
                    alt={`Plan ${apartment.type}`}
                    class="w-full h-full object-contain"
                  />
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Packages Section -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-8">
        Pachete Finisaje
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          [
            {
              name: "Standard",
              price: "Inclus în preț",
              features: [
                "Parchet laminat",
                "Gresie și faianță",
                "Uși interior",
              ],
            },
            {
              name: "Premium",
              price: "+5000€",
              features: [
                "Parchet triplu stratificat",
                "Gresie porțelanată",
                "Uși premium",
              ],
            },
            {
              name: "Luxury",
              price: "+10000€",
              features: ["Parchet masiv", "Marmură", "Uși custom"],
            },
          ].map((packageItem) => (
            <div class="border rounded-sm p-8 text-center">
              <h3 class="text-2xl font-bold mb-4">{packageItem.name}</h3>
              <p class="text-primary font-bold mb-6">{packageItem.price}</p>
              <ul class="space-y-3">
                {packageItem.features.map((feature) => (
                  <li class="text-gray-600">{feature}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Location Map Section -->
  <section class="py-12 bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-8">Locație</h2>
      <div class="flex flex-col items-center">
        <div id="leaflet-map" class="leaflet-map rounded shadow"></div>
        <div style="z-index: 10;">
          <button
            id="zoom-city"
            class="inline-block mt-4 px-6 py-3 font-semibold rounded shadow hover:bg-primary-700 transition"
            >Vedere Oras</button
          >
          <button
            id="zoom-area"
            class="inline-block mt-4 px-6 py-3 font-semibold rounded shadow hover:bg-primary-700 transition"
            >Vederes Zona</button
          >
        </div>
        <a
          href="https://maps.app.goo.gl/VaRfRMyJi5aHt9kYA"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block mt-4 px-6 py-3 font-semibold rounded shadow hover:bg-primary-700 transition"
          >Vezi pe Google Maps</a
        >
      </div>
    </div>
    <style is:global>
      @import url("https://unpkg.com/leaflet@1.9.4/dist/leaflet.css");
    </style>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""
    ></script>
    <script>
      window.addEventListener("DOMContentLoaded", function () {
        var center = [45.752179, 21.275771];
        var map = L.map("leaflet-map", {
          center,
          zoom: 16,
          scrollWheelZoom: false,
          zoomControl: false,
          attributionControl: false,
          closePopupOnClick: false,
          dragging: false,
          doubleClickZoom: false,
          boxZoom: false,
          keyboard: false,
          renderer: L.canvas(),
        });
        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
          maxZoom: 19,
        }).addTo(map);
        var marker = L.marker(center).addTo(map);
        marker.bindPopup("NOSTO").openPopup();

        var zoomCityButton = document.getElementById("zoom-city");
        var zoomAreaButton = document.getElementById("zoom-area");
        zoomCityButton.addEventListener("click", function () {
          map.setView(center, 13);
        });
        zoomAreaButton.addEventListener("click", function () {
          map.setView(center, 16);
        });
      });
    </script>
  </section>
</Layout>

<style>
  .apartment-section {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeIn 0.5s ease-out forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .leaflet-map {
    width: 80%;
    aspect-ratio: 5/3;
    z-index: 0;
  }
  @media (max-width: 640px) {
    .leaflet-map {
      aspect-ratio: 3/5;
      width: 90%;
    }
  }
</style>
