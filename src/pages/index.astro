---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import heroImage from '../assets/hero-img.png';
import heroLogo from '../assets/hero-logo.svg';
import Location from '../components/Location.astro';
import SectionTitle from '../components/SectionTitle.astro';
import ApartmentShowcase from '../components/ApartmentShowcase.svelte';
import Finish from '../components/Finish.astro';
import { techDetails } from '../config/techDetails.ts';
import Dotari from '../components/Dotari.astro';
---

<Layout title="Proiect Rezidential - Nostro">
  <!-- Hero Section -->
  <section id="about" class="relative h-screen w-full overflow-hidden">
    <Image
      src={heroImage}
      alt="Apartment Building"
      class="w-full h-full object-cover object-center"
    />
    <Image
      src={heroLogo}
      alt="Hero Logo"
      class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2"
    />
  </section>

  <SectionTitle title="Prezentarea generală a proiectului" id="despre-proiect-title" class="pt-8" />
  <section id="despre" class="section-x-padding bg-main pt-8">
    <div class="flex flex-col mx-auto">
      <div class="w-full mb-4">
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt
          ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation
          ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in
          reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur
          sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id
          est laborum.
        </p>
      </div>

      <div class="flex flex-col md:flex-row gap-8">
        <div class="md:w-1/2">
          <Image
            src="https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg"
            alt="Building Interior"
            class="shadow-lg w-full h-full object-cover"
            inferSize
          />
        </div>

        <div class="md:w-1/2 flex flex-col gap-8">
          <div class="flex gap-4 h-1/2">
            <div class="w-1/2">
              <Image
                src="https://images.pexels.com/photos/1643383/pexels-photo-1643383.jpeg"
                alt="Interior Detail 1"
                class="shadow-lg w-full h-full object-cover"
                inferSize
              />
            </div>
            <div class="w-1/2">
              <Image
                src="https://images.pexels.com/photos/1643384/pexels-photo-1643384.jpeg"
                alt="Interior Detail 2"
                class="shadow-lg w-full h-full object-cover"
                inferSize
              />
            </div>
          </div>

          <div class="h-1/2">
            <p class="mb-2">
              Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat
              nulla pariatur. Excepteur sint occaecat cupidatat non proident.
            </p>
            <ul class="space-y-2">
              <li class="flex items-center">
                <span class="w-6 h-6 mr-2">✓</span>
                Locație premium în centrul orașului
              </li>
              <li class="flex items-center">
                <span class="w-6 h-6 mr-2">✓</span>
                Finisaje de înaltă calitate
              </li>
              <li class="flex items-center">
                <span class="w-6 h-6 mr-2">✓</span>
                Parcare subterană
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Apartments Section -->
  <section class="pt-12 pb-0 bg-main">
    <SectionTitle title="Tipuri de Apartamente" id="apartamente-title" />
    <div class="max-w-[95vw] lg:max-w-[1600px] mx-auto px-2 sm:px-6 lg:px-8">
      <ApartmentShowcase
        client:load
        apartments={[
          {
            type: 'STUDIO',
            mobileType: 'STUDIO',
            size: '45mp',
            description:
              'Apartament modern tip studio, perfect pentru tineri profesioniști sau investiție. Spațiu eficient compartimentat cu zonă de zi multifuncțională, bucătărie și baie.',
            planImage:
              'https://www.conceptdraw.com/samples/resource/images/solutions//Building-Floor-Plans-House-Plan-Sample.png',
            features: ['Suprafață utilă: 45mp', 'Living + bucătărie', 'Baie', 'Balcon'],
          },
          {
            type: '1.5 CAMERE',
            mobileType: '1.5 CAM',
            size: '65mp',
            description:
              'Apartament spațios cu două camere, ideal pentru cupluri sau familii mici. Dispune de living cu bucătărie, dormitor separat și baie.',
            planImage:
              'https://www.conceptdraw.com/samples/resource/images/solutions//Building-Floor-Plans-House-Plan-Sample.png',
            features: ['Suprafață utilă: 65mp', 'Living + bucătărie', 'Dormitor', 'Baie', 'Balcon'],
          },
          {
            type: '2 CAMERE',
            mobileType: '2 CAM',
            size: '85mp',
            description:
              'Apartament generos cu trei camere, perfect pentru familii. Include living cu bucătărie, două dormitoare și două băi.',
            planImage:
              'https://www.conceptdraw.com/samples/resource/images/solutions//Building-Floor-Plans-House-Plan-Sample.png',
            features: [
              'Suprafață utilă: 85mp',
              'Living + bucătărie',
              '2 Dormitoare',
              '2 Băi',
              'Balcon',
            ],
          },
          {
            type: '2.5 CAMERE',
            mobileType: '2.5 CAM',
            size: '85mp',
            description:
              'Apartament generos cu trei camere, perfect pentru familii. Include living cu bucătărie, două dormitoare și două băi.',
            planImage:
              'https://www.conceptdraw.com/samples/resource/images/solutions//Building-Floor-Plans-House-Plan-Sample.png',
            features: [
              'Suprafață utilă: 85mp',
              'Living + bucătărie',
              '2 Dormitoare',
              '2 Băi',
              'Balcon',
            ],
          },
          {
            type: '3 CAMERE',
            mobileType: '3 CAM',
            size: '85mp',
            description:
              'Apartament generos cu trei camere, perfect pentru familii. Include living cu bucătărie, două dormitoare și două băi.',
            planImage:
              'https://www.conceptdraw.com/samples/resource/images/solutions//Building-Floor-Plans-House-Plan-Sample.png',
            features: [
              'Suprafață utilă: 85mp',
              'Living + bucătărie',
              '2 Dormitoare',
              '2 Băi',
              'Balcon',
            ],
          },
          {
            type: '4 CAMERE',
            mobileType: '4 CAM',
            size: '85mp',
            description:
              'Apartament generos cu trei camere, perfect pentru familii. Include living cu bucătărie, două dormitoare și două băi.',
            planImage:
              'https://www.conceptdraw.com/samples/resource/images/solutions//Building-Floor-Plans-House-Plan-Sample.png',
            features: [
              'Suprafață utilă: 85mp',
              'Living + bucătărie',
              '2 Dormitoare',
              '2 Băi',
              'Balcon',
            ],
          },
        ]}
      />
    </div>
  </section>

  <!-- Packages Section -->
  <section id="finisaje" class="pt-0 pb-12 bg-main w-full">
    <SectionTitle title="Pachete Finisaje și dotări" id="finisaje-title" />
    <Finish />
    <Dotari />
  </section>

  <SectionTitle title="Listă detalii tehnice" id="tech-title" />
  <section id="tech" class="section-x-padding bg-main py-8">
    <div class="max-w-[95vw] lg:max-w-[1600px] mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          techDetails.map((detail: { title: string; value: string }) => (
            <div class="p-6">
              <h3 class="font-heading font-light text-xl mb-2 uppercase">{detail.title}</h3>
              <p class="text-lg">{detail.value}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Location Map Section -->
  <section id="location" class="py-12 bg-main w-full">
    <SectionTitle title="Locație si mobilitate" id="location-title" />
    <div class="px-8 md:px-16">
      <Location />
    </div>
  </section>
</Layout>
