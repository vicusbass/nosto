---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact - Nosto">
  <section class="py-10 max-w-lg mx-auto px-4">
    <h1 class="text-3xl font-bold text-center mb-4">Contact</h1>
    <form
      id="contact-form"
      class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 space-y-4"
      method="POST"
    >
      <div>
        <label for="nume" class="block text-gray-700 text-sm font-bold mb-2"
          >Nume</label
        >
        <input
          type="text"
          id="nume"
          name="nume"
          required
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        />
      </div>
      <div>
        <label for="telefon" class="block text-gray-700 text-sm font-bold mb-2"
          >Telefon</label
        >
        <input
          type="text"
          id="telefon"
          name="telefon"
          required
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        />
      </div>
      <div>
        <label for="email" class="block text-gray-700 text-sm font-bold mb-2"
          >Email</label
        >
        <input
          type="email"
          id="email"
          name="email"
          required
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        />
      </div>
      <div>
        <label for="mesaj" class="block text-gray-700 text-sm font-bold mb-2"
          >Mesaj</label
        >
        <textarea
          id="mesaj"
          name="mesaj"
          rows="4"
          required
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        ></textarea>
      </div>
      <div class="flex items-start">
        <input
          type="checkbox"
          id="confidentialitate"
          name="confidentialitate"
          required
          class="mr-2 mt-1"
        />
        <label for="confidentialitate" class="text-sm"
          >am luat la cunoștintă <a
            href="/politica-confidentialitate"
            class="underline text-blue-600">politica de confidențialitate</a
          ></label
        >
      </div>
      <div class="flex items-start">
        <input
          type="checkbox"
          id="informari"
          name="informari"
          class="mr-2 mt-1"
        />
        <label for="informari" class="text-sm"
          >sunt de acord să primesc informări comerciale referitoare la proiect</label
        >
      </div>
      <button
        class="w-full rounded border border-gray-300 py-2 px-3 bg-gray-50 text-gray-700"
        type="submit">Trimite</button
      >
      <a
        href=`https://wa.me/${process.env.WHATSAPP_NUMBER}`
        target="_blank"
        rel="noopener noreferrer"
        class="w-full flex items-center justify-center mt-2 rounded border border-green-500 py-2 px-3 bg-green-50 text-green-700 font-semibold hover:bg-green-100 transition"
        aria-label="Contactează pe WhatsApp"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-2"
          fill="currentColor"
          viewBox="0 0 24 24"
          ><path
            d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.472-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.149-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.372-.025-.521-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.372-.01-.571-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.099 3.2 5.077 4.363.709.306 1.262.489 1.694.626.712.227 1.36.195 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.413-.074-.124-.272-.198-.57-.347zm-5.421 7.617h-.001a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.999-3.648-.235-.374A9.86 9.86 0 012.1 12.045C2.111 6.479 6.58 2.01 12.149 2c2.652.004 5.151 1.037 7.032 2.929a9.822 9.822 0 012.917 7.031c-.011 5.566-4.48 10.035-10.047 10.039zm8.413-18.252A11.815 11.815 0 0012.149 0C5.453.009.1 5.366.09 12.062c0 2.13.557 4.213 1.615 6.044L.057 24l6.084-1.617a11.88 11.88 0 005.408 1.378h.005c6.696 0 12.149-5.357 12.16-11.954a11.82 11.82 0 00-3.48-8.66z"
          ></path></svg
        >
        WhatsApp
      </a>
      <p id="form-status" class="text-center text-green-600 mt-4"></p>
    </form>
    <script type="module">
      const form = document.getElementById("contact-form");
      const status = document.getElementById("form-status");
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        status.textContent = "Se trimite...";
        const data = Object.fromEntries(new FormData(form));
        // Use Formspree for free email sending
        const res = await fetch(process.env.FORMSPREE_URL, {
          method: "POST",
          headers: { Accept: "application/json" },
          body: new FormData(form),
        });
        if (res.ok) {
          status.textContent = "Mesaj trimis cu succes!";
          form.reset();
        } else {
          status.textContent = "A apărut o eroare. Încercați din nou.";
        }
      });
    </script>
  </section>
</Layout>
