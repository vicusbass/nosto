---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import tiktok from '../assets/tiktok.svg';
import contact from '../config/contact';
import Layout from '../layouts/Layout.astro';
import SectionTitle from '../components/SectionTitle.astro';
import FAQ from '../components/FAQ.astro';
---

<Layout title="Contact - Nosto">
  <SectionTitle title="Contact" />
  <section class="section-x-padding font-heading py-0 md:py-4">
    <div class="flex flex-col md:flex-row justify-between">
      <div class="w-full md:w-5/12 bg-tab-secondary py-4 px-4 md:px-8">
        <form id="contact-form" class="space-y-3" method="POST">
          <div>
            <label for="nume" class="block mb-1 text-sm">Nume</label>
            <input
              type="text"
              id="nume"
              name="nume"
              required
              class="w-full py-2 px-2 bg-white border-none"
            />
          </div>

          <div>
            <label for="email" class="block mb-1 text-sm">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full py-2 px-2 bg-white border-none"
            />
          </div>

          <div>
            <label for="mesaj" class="block mb-1 text-sm">Mesajul dumneavoastră</label>
            <textarea
              id="mesaj"
              name="mesaj"
              rows="3"
              required
              class="w-full py-2 px-2 bg-white border-none"></textarea>
          </div>

          <div class="flex items-start mt-1">
            <input
              type="checkbox"
              id="confidentialitate"
              name="confidentialitate"
              required
              class="mr-2 mt-0.5"
            />
            <label for="confidentialitate" class="text-xs"
              >am luat la cunoștintă <button
                type="button"
                id="privacy-policy-btn"
                class="underline text-blue-600 hover:text-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50"
                >politica de confidențialitate</button
              ></label
            >
          </div>

          <div class="flex items-start -mt-1">
            <input type="checkbox" id="informari" name="informari" class="mr-2 mt-0.5" />
            <label for="informari" class="text-xs"
              >sunt de acord să primesc informări comerciale referitoare la proiect</label
            >
          </div>

          <button
            id="submit-button"
            class="btn-primary w-full disabled:opacity-50 disabled:cursor-not-allowed"
            type="submit"
            disabled>Trimite</button
          >
          <p id="form-status" class="text-center text-green-600 mt-4"></p>
        </form>
      </div>

      <div
        class="w-full md:w-1/2 min-h-[250px] md:min-h-[300px] max-h-[400px] flex items-center justify-center py-8 md:py-0"
        id="contact-details"
      >
        <div class="flex flex-col gap-8 p-3 md:p-6 w-full max-w-xs">
          <div class="md:hidden flex items-center">
            <Icon name="mdi:phone" class="h-8 w-8 text-[#c27154] mr-4" />
            <a href={`tel:${contact.phone}`} class="text-xl hover:underline">{contact.phone}</a>
          </div>

          <div class="md:hidden flex items-center">
            <Icon name="mdi:email" class="h-8 w-8 text-[#c27154] mr-4" />
            <a href={`mailto:${contact.email}`} class="text-xl hover:underline">{contact.email}</a>
          </div>

          <div class="md:hidden flex items-center">
            <Icon name="mdi:map-marker" class="h-8 w-8 text-[#c27154] mr-4" />
            <a
              href={contact.address}
              target="_blank"
              rel="noopener noreferrer"
              class="text-xl hover:underline">{contact.addressText}</a
            >
          </div>

          <div class="md:hidden flex items-center">
            <Icon name="mdi:whatsapp" class="h-8 w-8 text-[#c27154] mr-4" />
            <a
              href={`https://wa.me/${contact.whatsapp}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-xl hover:underline">WhatsApp</a
            >
          </div>

          <div class="hidden md:flex items-center">
            <Icon name="mdi:phone" class="h-8 w-8 color-main-btn mr-4" />
            <a href={`tel:${contact.phone}`} class="text-xl hover:underline">{contact.phone}</a>
          </div>
          <div class="hidden md:flex items-center">
            <Icon name="mdi:email" class="h-8 w-8 color-main-btn mr-4" />
            <a href={`mailto:${contact.email}`} class="text-xl hover:underline">{contact.email}</a>
          </div>
          <div class="hidden md:flex items-center">
            <Icon name="mdi:map-marker" class="h-8 w-8 color-main-btn mr-4" />
            <a
              href={contact.address}
              target="_blank"
              rel="noopener noreferrer"
              class="text-xl hover:underline">{contact.addressText}</a
            >
          </div>
          <div class="hidden md:flex items-center">
            <Icon name="mdi:whatsapp" class="h-8 w-8 color-main-btn mr-4" />
            <a
              href={`https://wa.me/${contact.whatsapp}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-xl hover:underline">WhatsApp</a
            >
          </div>
        </div>
      </div>
    </div>

    <!-- Privacy Policy Popup Modal -->
    <div
      id="privacy-modal"
      class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden"
    >
      <div class="bg-white rounded-lg shadow-lg max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
        <div class="flex justify-between items-center p-6 border-b">
          <h2 class="text-xl font-bold">Politica de Confidențialitate</h2>
          <button id="close-modal-btn" class="text-gray-500 hover:text-gray-700 text-2xl font-bold">
            &times;
          </button>
        </div>
        <div class="p-6 space-y-4">
          <h3 class="text-lg font-semibold">Colectarea și procesarea datelor personale</h3>
          <p class="text-gray-700">
            Prin completarea formularului de contact, sunteți de acord cu colectarea și procesarea
            datelor personale furnizate (nume, adresă de email, mesaj) în scopul răspunsului la
            solicitarea dumneavoastră.
          </p>

          <h3 class="text-lg font-semibold">Utilizarea datelor</h3>
          <p class="text-gray-700">Datele personale furnizate vor fi utilizate exclusiv pentru:</p>
          <ul class="list-disc list-inside text-gray-700 space-y-1">
            <li>Răspunsul la solicitarea dumneavoastră</li>
            <li>Comunicarea directă cu dumneavoastră</li>
            <li>
              Furnizarea de informații despre serviciile noastre (doar dacă ați bifat această
              opțiune)
            </li>
          </ul>

          <h3 class="text-lg font-semibold">Protecția datelor</h3>
          <p class="text-gray-700">
            Ne angajăm să protejăm datele dumneavoastră personale și să nu le transmitem către terți
            fără consimțământul dumneavoastră explicit.
          </p>

          <h3 class="text-lg font-semibold">Drepturile dumneavoastră</h3>
          <p class="text-gray-700">
            Aveți dreptul să solicitați accesul, rectificarea, ștersarea sau portabilitatea datelor
            personale, precum și dreptul de a vă opune procesării acestora.
          </p>

          <h3 class="text-lg font-semibold">Contact</h3>
          <p class="text-gray-700">
            Pentru orice întrebări legate de procesarea datelor personale, ne puteți contacta prin
            intermediul informațiilor de contact disponibile pe acest site.
          </p>
        </div>
        <div class="flex justify-end p-6 border-t">
          <button id="accept-privacy-btn" class="btn-primary"> Am înțeles </button>
        </div>
      </div>
    </div>

    <script is:inline>
      const form = document.getElementById('contact-form');
      const status = document.getElementById('form-status');
      const confidentialitateCheckbox = document.getElementById('confidentialitate');
      const submitButton = document.getElementById('submit-button');
      const privacyPolicyBtn = document.getElementById('privacy-policy-btn');
      const privacyModal = document.getElementById('privacy-modal');
      const closeModalBtn = document.getElementById('close-modal-btn');
      const acceptPrivacyBtn = document.getElementById('accept-privacy-btn');

      function updateSubmitButtonState() {
        if (
          confidentialitateCheckbox instanceof HTMLInputElement &&
          submitButton instanceof HTMLButtonElement
        ) {
          submitButton.disabled = !confidentialitateCheckbox.checked;
        }
      }

      confidentialitateCheckbox?.addEventListener('change', updateSubmitButtonState);
      updateSubmitButtonState(); // Initial state

      // Privacy policy popup functionality
      function openPrivacyModal() {
        if (privacyModal) {
          privacyModal.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
          // Scroll to top of modal content
          const modalContent = privacyModal.querySelector('.max-w-2xl');
          if (modalContent) {
            modalContent.scrollTop = 0;
          }
        }
      }

      function closePrivacyModal() {
        if (privacyModal) {
          privacyModal.classList.add('hidden');
          document.body.style.overflow = 'auto';
        }
      }

      privacyPolicyBtn?.addEventListener('click', openPrivacyModal);
      closeModalBtn?.addEventListener('click', closePrivacyModal);
      acceptPrivacyBtn?.addEventListener('click', closePrivacyModal);

      // Close modal when clicking outside
      privacyModal?.addEventListener('click', (e) => {
        if (e.target === privacyModal) {
          closePrivacyModal();
        }
      });

      // Close modal with Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !privacyModal?.classList.contains('hidden')) {
          closePrivacyModal();
        }
      });

      form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        if (
          !(form instanceof HTMLFormElement) ||
          !status ||
          !(submitButton instanceof HTMLButtonElement)
        )
          return;

        status.textContent = 'Se trimite...';
        submitButton.disabled = true;

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        try {
          const response = await fetch('/api/send-email', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
          });

          const result = await response.json();

          if (response.ok) {
            status.textContent = result.message;
            form.reset();
          } else {
            status.textContent = result.message || 'A apărut o eroare. Încercați din nou.';
          }
        } catch (error) {
          status.textContent = 'A apărut o eroare de rețea. Încercați din nou.';
        } finally {
          updateSubmitButtonState();
        }
      });
    </script>
  </section>

