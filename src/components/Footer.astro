---
import { Icon } from 'astro-icon/components';
import footerLogo from '../assets/footer-logo.svg';
import { Image } from 'astro:assets';
import contact from '../config/contact';
---

<footer class="footer py-8">
  <div class="mx-auto px-4 md:px-6 lg:px-16">
    <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-8">
      <div class="flex flex-row gap-8 items-start">
        <div>
          <Image src={footerLogo} alt="NOSTO Logo" class="h-24 w-auto" />
        </div>
        <div class="flex flex-col gap-3 text-white">
          <p class="flex items-center gap-2">
            <Icon name="mdi:phone" class="h-5 w-5" />
            <a href={`tel:${contact.phone}`}>{contact.phone}</a>
          </p>
          <p class="flex items-center gap-2">
            <Icon name="mdi:email" class="h-5 w-5" />
            <a href={`mailto:${contact.email}`}>{contact.email}</a>
          </p>
          <p class="flex items-center gap-2">
            <Icon name="mdi:map-marker" class="h-5 w-5" />
            <a href={contact.address} target="_blank" rel="noopener noreferrer">
              {contact.addressText}
            </a>
          </p>
        </div>
      </div>

      <div class="flex items-center justify-start md:justify-end mt-6 md:mt-0">
        <div class="flex flex-wrap md:flex-nowrap gap-4">
          <a href="/contact" class="btn-primary">Contact</a>
          <a href="/apartamente" class="btn-primary hidden md:inline-flex">Vezi apartamente</a>
          <a href={`tel:${contact.phone}`} class="btn-primary">SunÄƒ acum</a>
        </div>
      </div>
    </div>
  </div>
</footer>
